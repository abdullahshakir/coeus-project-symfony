{% extends 'layouts/buyer.base.html.twig' %}

{% block title %}Order{% endblock %}

{% block main %}
<div class="content-wraper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <!-- Basic Form Inputs card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>List Orders</h5>
                    </div>
                    <div class="card-block" style="padding: 10px;">
                        <table id="orders" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Status</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in orders %}
                                <tr>
                                    <td>{{ order.id }}</td>
                                    <td>{{ order.status }}</td>
                                    <td>{{ order.createdAt|date('F j, Y g:i a') }}</td>
                                    <td>{{ order.updatedAt|date('F j, Y g:i a') }}</td>
                                    <td>
                                        <a class="btn btn-success" href="{{ path('buyer_order_show', {'id': order.id}) }}">show</a>
                                    </td>
                                </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8">no records found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#orders').DataTable();
        } );
    </script>
{% endblock %}