{% extends 'layouts/admin.base.html.twig' %}

{% block title %}Product{% endblock %}

{% block main %}
<div class="col-sm-12">
    <!-- Basic Form Inputs card start -->
    <div class="card">
        <div class="card-header">
            <h5>Product</h5>
        </div>
        <div class="card-block">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td><a target="_blank" href="{{ asset(product_images_directory ~ product.imageLink) }}"><img style="height:50px;width:50px;" src={{ asset(product_images_directory ~ product.imageLink) }}/></a></td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>{{ product.category.name }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ product.status }}</td>
                    </tr>
                    <tr>
                        <th>Total Sales</th>
                        <td>{{ data.totalSales }}</td>
                    </tr>
                    <tr>
                        <th>Feedback</th>
                        <table id="feedback" class="table table-striped table-bordered">
                            <thead>
                                <th>Id</th>
                                <th>Message</th>
                                <th>Rating</th>
                            </thead>
                            <tbody>
                                {% for feedback in data.feedback %}
                                <tr>
                                    <td>{{ feedback.id }}</td>
                                    <td>{{ feedback.message }}</td>
                                    <td>{{ feedback.rating }}</td>
                                </tr>
                                {% endfor %}
                        </table>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#feedback').DataTable();
        } );
    </script>
{% endblock %}