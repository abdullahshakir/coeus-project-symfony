{{ form_start(form) }}
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Quantity</label>
        <div class="col-sm-10">
            {{ form_row(form.quantity, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            {{ form_row(form.cat, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Image</label>
        <div class="col-sm-10">
            {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary pull-right">
            <i class="fa fa-btn"></i> {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}