{% extends 'layouts/admin.base.html.twig' %}

{% block title %}Edit Order{% endblock %}

{% block main %}
<div class="row">
    <div class="col-sm-12">
        <!-- Basic Form Inputs card start -->
        <div class="card">
            <div class="card-header">
                <h5>Edit Order</h5>
            </div>
            <div class="card-block">
                <h4 class="sub-title">Add Product</h4>
                {{ form_start(form) }}
                <div class="invalid-feedback">
                    {{ form_errors(form) }}
                </div>
                <div class="form_group">
                    <div class="col-md-12 mb-3">
                        {{ form_row(form.product, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form_group">
                    <div class="col-md-12 mb-3">
                        {{ form_row(form.quantity, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group p-3 mt-4">
                    <div class="text-center" style="margin-top:5px;">
                        <a class="btn btn-primary pull-left" href="{{ path('admin_order_edit', {'id': order.id}) }}">Back</a>
                        {{ form_widget(form.add, {'attr': {'class': 'btn btn-success pull-right'}}) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
