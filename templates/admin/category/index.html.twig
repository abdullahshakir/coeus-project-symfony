{% extends 'layouts/admin.base.html.twig' %}

{% block title %}Category{% endblock %}

{% block main %}

<div class="row">
    <div class="col-sm-12">
        <!-- Basic Form Inputs card start -->
        <div class="card">
            <div class="card-header">
                <h5>List Categories</h5>
            </div>
            <div class="card-block">
                <table id="categories" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.name }}</td>
                            <td>{{ category.status }}</td>
                            <td>
                                <a class="btn btn-success" href="{{ path('admin_category_show', {'id': category.id}) }}">show</a>
                                <a class="btn btn-primary" href="{{ path('admin_category_edit', {'id': category.id}) }}">edit</a>
                            </td>
                        </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#categories').DataTable();
        } );
    </script>
{% endblock %}